<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/rentalPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rentalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rentalPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="4dp"
        android:text="Rental Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rentalModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rentalName"
        app:layout_constraintStart_toEndOf="@id/rentalPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="4dp"
        android:text="Rental Model"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rentalYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rentalModel"
        app:layout_constraintStart_toEndOf="@id/rentalPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="4dp"
        android:text="Year"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rentalKm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rentalYear"
        app:layout_constraintStart_toEndOf="@id/rentalPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="4dp"
        android:text="Kilometers"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rentalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rentalKm"
        app:layout_constraintStart_toEndOf="@id/rentalPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="4dp"
        android:text="Price"
        android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
